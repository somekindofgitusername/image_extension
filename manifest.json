{
    "manifest_version": 2,
    "name": "Image Saver",
    "version": "1.0",
    "description": "Save images by double-clicking on them.",
    "permissions": ["downloads", "activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  